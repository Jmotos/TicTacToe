{
  "name": "tictactoe",
  "version": "1.0.0",
  "description": "Technical Challenge: Tic-Tac-Toe Game with SAP CAP & UI5",
  "scripts": {
    "start": "cds watch",
    "test": "jest",
    "deploy:sqlite": "cds deploy --to sqlite",
    "watch-tictactoe": "cds watch --open tictactoe/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "dependencies": {
    "@sap/cds": "^9.7.1",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.1",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9.7.1",
    "jest": "^30.2.0",
    "supertest": "^7.2.2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db.sqlite"
        }
      }
    },
    "[test]": {
      "requires": {
        "db": {
          "kind": "sqlite",
          "credentials": {
            "database": ":memory:"
          }
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ]
}
